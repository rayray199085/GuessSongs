<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:visibility="invisible"
              android:gravity="center_horizontal"
              android:background="#e0000000"
              android:id="@+id/ll_pass_task_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="25dp"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:background="@drawable/index_medal"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_pass_task_title"
                  android:text="您已经击败了99%的玩家"
                  android:textSize="25sp"
                  android:layout_marginLeft="5dp"
                  android:textColor="#ffffff"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:text="答案正确"
              android:layout_marginTop="30dp"
              android:textSize="45sp"
              android:textColor="#ffffff"
              android:textStyle="bold"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:background="@drawable/game_level_title"
              android:layout_marginTop="20dp"
              android:gravity="center"
              android:text="1"
              android:textSize="40sp"
              android:textColor="#ffffff"
              android:id="@+id/tv_pass_task_song_num"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="征服"
              android:layout_marginTop="20dp"
              android:textColor="#ffffff"
              android:textSize="35sp"
              android:id="@+id/tv_pass_task_song_name"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="25dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="奖励 : "
                  android:textSize="25sp"
                  android:textColor="#ffffff"
                  android:gravity="center"
                  android:drawableRight="@drawable/game_coin_icon"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="25sp"
                  android:textColor="#ffffff"
                  android:text=" + 10"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageButton android:layout_width="wrap_content"
                 android:id="@+id/ibtn_pass_task_next"
                 android:layout_marginTop="30dp"
                 android:background="@drawable/pass_next_selector"
                 android:layout_height="wrap_content"/>

    <ImageButton android:layout_width="wrap_content"
                 android:id="@+id/ibtn_pass_task_share"
                 android:layout_marginTop="30dp"
                 android:background="@drawable/pass_share_selector"
                 android:layout_height="wrap_content"/>

</LinearLayout>